                  option(value="Philips") Philips
                  option(value="Mobell") Mobell
                  option(value="Mobiistar") Mobiistar
                  option(value="Itel") Itel
                  option(value="Coolpad") Coolpad
                  option(value="HTC") HTC
                  option(value="Motorola") Motorola
            tr
              td Tên file ảnh
              td
                input#img(type="text")
            tr
